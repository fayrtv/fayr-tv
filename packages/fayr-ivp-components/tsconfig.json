{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "lib",
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "jsx": "react",
        "types": ["node"]
