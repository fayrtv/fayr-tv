{
	"name": "@fayr/common",
	"version": "1.0.0",
	"main": "lib/index.js",
	"scripts": {
		"build": "yarn clean && yarn copy-files && tsc",
		"dev": "yarn clean && nodemon --watch ./src -e js,ts,tsx,css,scss,less --exec \"yarn run copy-files && tsc\"",
		"clean": "rimraf lib/",
		"copy-files": "copyfiles -u 1 \"src/**/*.scss\" lib/"
	},
	"dependencies": {
		"classnames": "^2.3.1",
		"react-dom": "^18.2.0",
		"react-emoji-render": "^1.2.4",
		"sass": "^1.46.0",
		"styled-components": "^5.3.5"
	},
	"devDependencies": {
		"@types/eslint-scope": "^3.7.2",
		"@types/node": "^17.0.8",
		"@types/react": "^18.0.14",
		"@types/react-dom": "^18.0.5",
		"@types/styled-components": "^5.1.25",
		"copyfiles": "^2.4.1",
		"node-sass": "^7.0.0",
		"nodemon": "^2.0.16",
		"react": "^18.2.0",
		"rimraf": "^3.0.2",
		"type-fest": "^2.11.2",
		"typescript": "^4.3.5"
	}
}
