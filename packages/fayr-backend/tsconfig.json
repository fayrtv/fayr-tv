{
    "compilerOptions": {
        "baseUrl": "lambda",
        "target": "ES2017",
        "esModuleInterop": true,
        "allowJs": false,
        "lib": ["es6", "dom", "dom.iterable"],
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "compiled",
        "noFallthroughCasesInSwitch": true,
        // Don't change this! Lambda relies on commonjs imports, es style is NOT supported
        "module": "CommonJS"
    },
    "include": ["lambda/*.ts"],
    "exclude": ["node_modules"]
}
