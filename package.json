{
    "name": "@fayr/monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "setup": "npx lerna bootstrap && yarn install && yarn build && yarn prepare",
        "prepare": "husky install",
        "build": "lerna run build --ignore chime-sdk-meeting-demo",
        "format": "prettylint \"**/*.{ts,js,html,jsx,tsx,css,less,scss,json}\" --fix",
        "format:check": "prettylint \"**/*.{ts,js,html,jsx,tsx,css,less,scss,json}\"",
        "test": "lerna run test",
        "dev:shared": "lerna run dev --parallel --scope @fayr/{common,ivp-components}",
        "dev:all": "lerna run dev --parallel --no-bail",
        "kill": "run-script-os",
        "kill:windows": "taskkill /im node.exe /F",
        "kill:default": "killall -s KILL node"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^2.0.4",
        "husky": "^7.0.0",
        "lerna": "^4.0.0",
        "markserv": "^1.17.4",
        "prettier": "^2.5.1",
        "run-script-os": "^1.1.6"
    }
}
