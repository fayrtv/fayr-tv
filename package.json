{
    "name": "@fayr/monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "prepare": "husky install",
        "build": "lerna run build",
        "format": "prettylint \"packages/**/*.{ts,js,html,jsx,tsx,css,less,scss,json}\" --fix",
        "format-check": "prettylint \"packages/**/*.{ts,js,html,jsx,tsx,css,less,scss,json}\"",
        "test": "lerna run test"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^2.0.4",
        "husky": "^7.0.0",
        "lerna": "^4.0.0",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.1",
        "prettylint": "^1.0.0"
    }
}
